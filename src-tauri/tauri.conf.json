{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Digimon NG",
  "version": "0.4.0",
  "identifier": "digimon-ng",
  "build": {
    "frontendDist": "../dist/digimon-ng/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run web",
    "beforeBuildCommand": "npm run build:angular"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Digimon NG",
        "label": "splashscreen",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "url": "/splashscreen"
      },
      {
        "title": "Digimon NG",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.icns", "icons/icon.ico"]
  }
}
